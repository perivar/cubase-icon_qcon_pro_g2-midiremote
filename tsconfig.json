{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "midiremote_api_v1": ["api/v1/midiremote_api_v1"]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es5"],
    "checkJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true, // for vscode debugging
    "strict": true,
    "removeComments": false,
    "noEmit": false,
    // "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src/**/*.ts"],
  // "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"]
  "exclude": ["node_modules"]
}
